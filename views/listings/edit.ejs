<% layout("/layouts/boilerplate.ejs") %>

    
    <form method="POST" action="/listings/<%=Listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit your list</h3>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= Listing.title %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Change title</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%= Listing.description %> </textarea>
                    <div class="invalid-feedback">Change Description</div>
                </div>

                <div class="mb-3">
                    <img src="<%= Listing.image.url%>">
                </div>

                <div class="mb-3">
                    <label for="Image" class="form-label">Image</label>
                    <input name="listing[image]"  type="file" class="form-control" >
                    <div class="invalid-feedback">Change image</div>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" value="<%= Listing.price %>" type="number" required>
                        <div class="invalid-feedback">Change Price</div>
                    </div>

                    <div class="mb-3 col-8">
                        <label for="country" class="form-label">country</label>
                        <input name="listing[country]" value="<%= Listing.country %>" type="text" required>
                        <div class="invalid-feedback">Change country</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" value="<%= Listing.location %>" type="text" required>
                    <div class="invalid-feedback">Change Location</div>
                </div>
        
                <button class="btn btn-dark edit-btn mt-3"> Add</button>
            </div>
        </div>
    </form>

